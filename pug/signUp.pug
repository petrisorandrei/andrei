doctype html
html
    head 
        title Chrome/Glass Buttons
            link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css")
        link(rel='stylesheet prefetch' href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900')
        link(rel='stylesheet prefetch' href='http://fonts.googleapis.com/css?family=Open+Sans')
        link(rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')

        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
        script(src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js")
        script    
            include signUp.js
            include index.js

        style
            include form.css
            include style.css
    body
        article
            nav(class="btn-bar nav-dark")
                button.btn.btn-glass.btn.primary.home(type = 'button')
                    i(class="fa fa-sm fa-chevron-right") HOME
                button.btn.btn-glass.btn.primary.login(type = 'button')
                    i(class="fa fa-sm fa-chevron-right") LOG IN
        br
        br
        form(id="contact")
            div(class="container")
                div(class="head")
                    h2 Sign up
                input(type="text" id="firstName" required="required" placeholder="First Name")
                br
                input(type="text" id="lastName" required="required" placeholder="Last Name")
                br 
                input(type="text" id="userName" required="required" placeholder="User Name")
                br 
                input(type="email" id="email" required="required" placeholder="Email")
                br
                input(type="phone" id="phone" required="required" placeholder="Phone")
                br
                input(type="password" id="password" required="required" placeholder="Password")
                br
                div(class="message") Message Sent
                button(class="button-form" id="submit" type="submit") Send!